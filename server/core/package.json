{
  "name": "core",
  "private": true,
  "version": "0.0.1",
  "description": "Core service / API for ClassExpress App",
  "main": "./src/index.js",
  "scripts": {
    "docker:build": "docker build -t gcr.io/classes-ekd/core -f ./.Dockerfile .",
    "docker:push": "docker push gcr.io/classes-ekd/core",
    "deploy:cloud-run": "gcloud run deploy --platform managed --image gcr.io/classes-ekd/core",
    "docs:delete": "npx rimraf ../docs",
    "docs:build": "npm run delete:docs && jsdoc -c ./jsdocConfiguration.json -r -d ../docs",
    "docs:serve": "npx nodemon -x npm run build:docs",
    "serve": "npx nodemon ./src/index.js",
    "start": "node ./src/index.js",
    "test": "npx mocha --exit",
    "lint:js": "npx eslint --ignore-path .gitignore --fix **/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Enkel-Digital/class-server.git"
  },
  "author": "JJ",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Enkel-Digital/class-server/issues"
  },
  "homepage": "https://github.com/Enkel-Digital/class-server#readme",
  "dependencies": {
    "@lionellbriones/logging": "^3.2.1",
    "@sendgrid/mail": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase": "^7.13.2",
    "firebase-admin": "^8.10.0",
    "helmet": "^3.21.2",
    "moment": "^2.25.3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.8",
    "rrule": "^2.6.4",
    "validator": "^12.1.0"
  },
  "devDependencies": {
    "docdash": "^1.1.1",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.0.1",
    "husky": "^3.1.0",
    "ignore-loader": "^0.1.2",
    "jsdoc": "^3.6.3",
    "jsdoc-export-default-interop": "^0.3.1",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
